@model IEnumerable<Blog_Project_MVC.Blog>

@{
    ViewBag.Title = "Movies";
}

<h2>Movies Articles</h2>
<hr/>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Btitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BUrl)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <b style="color:red; font-size:large;"> @Html.DisplayFor(modelItem => item.Btitle)</b>
                @Html.DisplayFor(modelItem => item.BDesc)
            </td>
        </tr>
        <tr>
            <td>
                <a href="~/Blog/@item.BUrl">Read Full Article</a>
            </td>
        </tr>
        <tr>
            <td>
                Category <a href="~/Blog/@item.BCategory">@Html.DisplayFor(modelItem => item.BCategory)</a>
            </td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Bid }) |
                @Html.ActionLink("Details", "Details", new { id = item.Bid }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Bid })
            </td>
        </tr>
    }

</table>
